@model Jeton.Admin.Web.Models.AppModel

@{
    ViewBag.Title = "App Detail";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                @Model.Name
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Id) :</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @disabled = "" })
                        </div>
                        <div class="col-sm-1">
                            <a class="btn btn-default" onclick="copyToClipboard('@Model.Id')" data-toggle="tooltip" data-placement="top" title="Tooltip on top"><i class="fa fa-copy"></i></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.AccessKey) :</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.AccessKey, new { @class = "form-control", @disabled = "" })
                        </div>
                        <div class="col-sm-1">
                            <a class="btn btn-default" onclick="copyToClipboard('@Model.AccessKey')" data-toggle="tooltip" data-placement="top" data-original-title="Copy to clipboard"><i class="fa fa-copy"></i></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Name) :</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Name</p>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Created) :</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Created</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Modified) :</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Modified</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.IsRoot) :</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.IsRoot</p>
                        </div>
                    </div>
                </div>


            </div>
            <div class="panel-footer">

                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-default" })

                @using (Html.BeginForm("ChangeStatus", "App", new { id = Model.Id }, FormMethod.Post, new { @class = "pull-right" }))
                {
                    @Html.AntiForgeryToken()
                    if (Model.IsDeleted)
                    {
                        <input type="submit" value="Activate" class="btn btn-success pull-right" onclick="return confirm('Are you sure you wish to activate this app?');"/>
                    }
                    else
                    {
                        <input type="submit" value="Disable" class="btn btn-danger pull-right" onclick="return confirm('Are you sure you wish to disable this app?');" />
                    }
                }

            </div>
        </div>
    </div>
</div>