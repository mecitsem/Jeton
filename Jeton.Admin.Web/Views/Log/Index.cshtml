                            <div class="panel-heading">
                                Response
                            </div>
                            <div class="panel-body">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Properties</th>
                                            <th>
                                                Values
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>Content Type</th>
                                            <td><span id="res_contenttype"></span></td>
                                        </tr>
                                        <tr>
