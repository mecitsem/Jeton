@model IEnumerable<Jeton.Admin.Web.Models.SettingModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Settings
            <p class="pull-right">
                @Html.ActionLink("+ Create", "Create", new { }, new { @class = "btn btn-success" })
            </p>
        </h1>


    </div>
</div>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">

        <table class="table table-hover table-striped table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValueType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        
                        @(item.IsEssential ? Html.DisplayFor(modelItem => item.Name, new {@class = "text-danger"}) : Html.DisplayFor(modelItem => item.Name))

                    </td>
                    <td>
                        <div class="row">
                            <div class="col-md-10">
                                <input class="form-control input-sm" style="width:100%;" type="text" placeholder="" readonly value="@item.Value">
                            </div>
                            <div class="col-md-push-2">
                                <a class="btn btn-default btn-sm" onclick="copyToClipboard('@item.Value')" data-toggle="tooltip" data-placement="top" title="Copy to clipboard"><i class="fa fa-copy"></i></a>
                            </div>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValueType)
                    </td>
                 
                    <td>
                        <button class="btn btn-info btn-sm" data-container="body" data-toggle="popover" data-placement="top" data-content="@item.Description"><i class="fa fa-info"></i></button>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class="btn btn-warning btn-sm " })
                        @Html.ActionLink("Detail", "Detail", new { id = item.Id }, new { @class = "btn btn-primary btn-sm " })
                        @if (!item.IsEssential)
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm pull-right" })
                        }
                    </td>
                </tr>
            }

        </table>




    </div>
    <!-- /.col-lg-12 -->
</div>
