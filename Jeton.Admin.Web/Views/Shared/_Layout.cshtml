<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jeton API Admin Panel</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/vendor/metisMenu/metisMenu.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/dist/css/sb-admin-2.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/vendor/morrisjs/morris.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/vendor/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <!-- DataTables CSS -->
    <link href="@Url.Content("~/Content/vendor/datatables-plugins/dataTables.bootstrap.css")" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="@Url.Content("~/Content/vendor/datatables-responsive/dataTables.responsive.css")" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("Styles", false)
    

   

</head>
<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">

                <img class="navbar-brand" src="@Url.Content("~/Content/img/logo.png")" width="32" style="padding: 10px 0; margin-left:10px" />
                <a class="navbar-brand" href="/">Jeton Admin <span>v1.0</span></a>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"> @User.Identity.Name
                        <i class="fa fa-user fa-fw"></i> 
                    </a>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->
            @Html.Partial("_PartialLeftMenu");
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            @RenderBody()

        </div>
     
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Content/vendor/metisMenu/metisMenu.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/vendor/raphael/raphael.min.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Content/vendor/morrisjs/morris.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/data/morris-data.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Content/dist/js/sb-admin-2.js")" type="text/javascript"></script>
    <!-- DataTables JavaScript -->
    <script src="@Url.Content("~/Content/vendor/datatables/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/datatables-responsive/dataTables.responsive.js")"></script>
    <script type="text/javascript">
        function copyToClipboard(text) {
            var $temp = $("<input>");
            $("body").append($temp);
            $temp.val(text).select();
            document.execCommand("copy");
            $temp.remove();
            alert("Copied to clipboard");
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
