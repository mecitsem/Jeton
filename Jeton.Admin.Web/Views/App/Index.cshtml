@model IEnumerable<Jeton.Admin.Web.Models.AppModel>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Apps</h1>
        <p class="pull-right">
            @Html.ActionLink("Create New App", "Create", new { }, new { @class = "btn btn-success" })
        </p>
      
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                App List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
               
                <table width="100%" class="table table-striped table-bordered table-hover" id="app-datatable">
                    <thead>
                        <tr>
                            <th data-orderable="false">Detail</th>
                            <th>AppId</th>
                            <th>Name</th>
                            <th>Access Key</th>
                            <th>App Type</th>
                            <th>Created</th>
                            <th>Modified</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr class="odd gradeX">
                                <td>
                                    <a class="btn btn-info" href="@Url.Action("Detail", "App", new { Id = item.AppId })"><i class="fa fa-list"></i></a>
                                </td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-10">
                                            <input class="form-control" style="width:100%;" type="text" placeholder="" readonly value="@item.AppId">
                                        </div>
                                        <div class="col-md-2">
                                            <a class="btn btn-warning" onclick="copyToClipboard('@item.AppId')" data-toggle="tooltip" data-placement="top" data-original-title="Copy to clipboard"><i class="fa fa-copy"></i></a>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-10">
                                            <input class="form-control" style="width:100%;" type="text" placeholder="" readonly value="@item.AccessKey">
                                        </div>
                                        <div class="col-md-2">
                                            <a class="btn btn-warning" onclick="copyToClipboard('@item.AccessKey')" data-toggle="tooltip" data-placement="top" data-original-title="Copy to clipboard"><i class="fa fa-copy"></i></a>
                                        </div>
                                    </div>


                                </td>


                                <td class="center text-info">@Html.Raw(item.IsRoot ? "Root" : "Normal")</td>
                                <td class="center">@item.Created</td>
                                <td class="center">@item.Modified</td>
                            </tr>
                        }



                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section Scripts{


    <script type="text/javascript">


        $(document).ready(function () {
            $('#app-datatable').DataTable({
                responsive: true
            });

            //$('.dataTables_filter').addClass('pull-right');
        });




    </script>
}
